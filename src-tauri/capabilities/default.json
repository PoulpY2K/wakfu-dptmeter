{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$DATA/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-data-read",
      "allow": [
        {
          "path": "$DATA/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-data-write",
      "allow": [
        {
          "path": "$DATA/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [
        {
          "path": "$DATA/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-unwatch",
      "allow": [
        {
          "path": "$DATA/**/*"
        }
      ]
    }
  ]
}